{
	"name": "initialize-css",
	"version": "2.0.0",
	"homepage": "http://jeroenoomsnl.github.io/initialize-css/",
	"description": "Initialize.css is a complete and customizable collection of CSS best practices based on Normalize.css and HTML5 Boilerplate. Available in CSS and configurable SASS (SCSS) and LESS format.",
	"author": {
		"name": "Jeroen Ooms",
		"email": "info@jeroenooms.nl",
		"url": "http://jeroenooms.nl"
	},
	"scripts": {
		"build": "npm run build:sass && npm run build:autoprefix && npm run build:minify",
		"build:sass": "sass styles/initialize.scss styles/initialize.css --no-source-map",
		"build:autoprefix": "postcss styles/initialize.css --replace --use autoprefixer --no-map",
		"build:minify": "postcss --use cssnano --output styles/initialize.min.css styles/initialize.css --no-map"
	},
	"devDependencies": {
		"autoprefixer": "^10.0.2",
		"cssnano": "^4.1.10",
		"postcss": "^8.1.10",
		"postcss-cli": "^8.3.0",
		"sass": "^1.29.0"
	},
	"main": "styles/initialize.scss",
	"repository": "https://github.com/jeroenoomsNL/initialize-css.git",
	"keywords": [
		"css",
		"scss",
		"sass",
		"less",
		"initialize",
		"boilerplate",
		"normalize",
		"reset",
		"typography"
	],
	"license": "MIT",
	"engines": {
		"node": "^10 || ^12 || >=14"
	},
	"browserslist": {
		"autoprefixer": [
			"last 2 versions",
			"Explorer >= 8",
			"Firefox >= 25"
		]
	}
}
